<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FameMatchApp.Views.CastorHomeView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:FameMatchApp.Models"
    xmlns:viewModel="clr-namespace:FameMatchApp.ViewModels"
    Title=""
    x:DataType="viewModel:CastorHomeViewModel">
    <VerticalStackLayout>
        <Label
            FontFamily="Broadway3D"
            FontSize="60"
            HorizontalOptions="Center"
            Text="Home Page" />
        <Label
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            Text=" My Auditions" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="20"
                Text="Name"
                FontAttributes="Italic"
                TextColor="Blue"/>
            <Label
                Grid.Column="1"
                Margin="20"
                Text="Is Public"
                FontAttributes="Italic"
                TextColor="Blue"/>

        </Grid>

        <CollectionView
            x:Name="theCollectionView"
            ItemsLayout="VerticalGrid, 1"
            ItemsSource="{Binding UsersAud}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Models:Audition">
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem
                                    Command="{Binding Source={x:Reference theCollectionView}, Path=BindingContext.IsntPublicCommand}"
                                    CommandParameter="{Binding .}"
                                    IconImageSource="notpublic1.jpg" />


                            </SwipeItems>
                        </SwipeView.LeftItems>





                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem
                                    Command="{Binding Source={x:Reference theCollectionView}, Path=BindingContext.IsPublicCommand}"
                                    CommandParameter="{Binding .}"
                                    IconImageSource="public1.png" />


                            </SwipeItems>
                        </SwipeView.RightItems>
                        <!--  Content  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--<Frame Grid.Column="0" CornerRadius="50" HeightRequest="40" WidthRequest="40">
                                <Image Source="{Binding FullProfileImagePath}" Grid.Column="0" HeightRequest="40" WidthRequest="40"/>
                            </Frame>-->
                            <Label
                                Grid.Column="0"
                                Margin="20"
                                Text="{Binding AudName}" />
                            <Label
                                Grid.Column="1"
                                Margin="20"
                                Text="{Binding IsPublic}" />

                        </Grid>
                    </SwipeView>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>