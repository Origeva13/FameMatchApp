<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FameMatchApp.Views.CastedHomeView"
             Title="">
    
    <VerticalStackLayout>
        <Label 
    Text="Home Page"
    VerticalOptions="Center" 
    HorizontalOptions="Center"
    FontFamily="Broadway3D"
    FontSize="40"/>
        <Line
Stroke="Black"
StrokeThickness="2"
X1="0"
X2="2550"
Y1="20"
Y2="20" />
        <ScrollView>
            <StackLayout>
                <StackLayout Margin="10">
                    <Label Text="Your Photos" FontSize="20" Margin="10" HorizontalOptions="Center"/>

                    <ScrollView HorizontalScrollBarVisibility="Always" Orientation="Horizontal">

                        <HorizontalStackLayout>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>
                            <Label>Photo Booth</Label>

                        </HorizontalStackLayout>
                    </ScrollView>

                </StackLayout>

            </StackLayout>


        </ScrollView>
        <Line
     Stroke="Black"
     StrokeThickness="2"
     X1="0"
     X2="2550"
     Y1="20"
     Y2="20" />
        <!--  Help Section Header  -->
        <Label
     Margin="20"
     FontAttributes="Bold"
     FontSize="Medium"
     HorizontalOptions="Center"
     Text="Need Help?" />
        <Label
     Margin="20"
     FontAttributes="Italic"
     FontSize="Small"
     HorizontalOptions="Center"
     Text=" You can select a common question and than click the support button for information." />
        <!--  Picker for Common Questions  -->
        <Picker
     x:Name="QuestionsPicker"
     Margin="20"
     ItemsSource="{Binding CommonQuestions}"
     SelectedItem="{Binding SelectedQuestion}" />

        <!--  Help Button  -->
        <Button
     Margin="20"
     BackgroundColor="Blue"
     Command="{Binding SendHelpEmail}"
     Text="Support" />
    </VerticalStackLayout>
</ContentPage>