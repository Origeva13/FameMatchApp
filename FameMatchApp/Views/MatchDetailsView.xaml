<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FameMatchApp.Views.MatchDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Candidate Details"
    BackgroundColor="#F2F2F2">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!--  Title of the page  -->
        <Label
            FontAttributes="Bold"
            FontFamily="Broadway3D"
            FontSize="36"
            HorizontalOptions="Center"
            Text="CANDIDATE DETAILS"
            TextColor="#2C3E50"
            VerticalOptions="Start" />

        <!--  Candidate information stack  -->
        <StackLayout
            Padding="20"
            BackgroundColor="White"
            HorizontalOptions="FillAndExpand"
            Spacing="20"
            >
            <!--  Name Section  -->
            <StackLayout Padding="0,10">
                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="FIRST NAME:"
                        TextColor="#34495E"
                        VerticalOptions="Center" />
                    <Label
                        Margin="10,0,0,0"
                        FontSize="16"
                        Text="{Binding Name}"
                        TextColor="#2C3E50"
                        VerticalOptions="Center" />
                    <!--  Added space between label and binding  -->
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="LAST NAME:"
                        TextColor="#34495E"
                        VerticalOptions="Center" />
                    <Label
                        Margin="10,0,0,0"
                        FontSize="16"
                        Text="{Binding LastName}"
                        TextColor="#2C3E50"
                        VerticalOptions="Center" />
                    <!--  Added space between label and binding  -->
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="EMAIL:"
                        TextColor="#34495E"
                        VerticalOptions="Center" />
                    <Label
                        Margin="10,0,0,0"
                        FontSize="16"
                        Text="{Binding Email}"
                        TextColor="#2C3E50"
                        VerticalOptions="Center" />
                    <!--  Added space between label and binding  -->
                </HorizontalStackLayout>
            </StackLayout>

            <!--  About the Candidate Section  -->
            <StackLayout Padding="0,10">
                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="ABOUT THE CANDIDATE:"
                        TextColor="#34495E"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Label
                    Margin="10,5,0,0"
                    FontSize="16"
                    LineBreakMode="WordWrap"
                    Text="{Binding AboutMe}"
                    TextColor="#2C3E50"
                    VerticalOptions="Start" />
                <!--  Added margin for better readability  -->
            </StackLayout>

            <!--  Instruction Text  -->
            <Label
                Margin="0,15,0,15"
                FontAttributes="Bold"
                FontSize="16"
                HorizontalOptions="Center"
                Text="To send an email to the candidate,  
                click the button below"
                TextColor="#1ABC9C"
                VerticalOptions="Center" />
            <!--  Increased space and changed color to highlight the instruction  -->
            
            
            <!-- Choose Audition  --><!--
            <Label FontAttributes="Bold" Text="Choose Audition" />
            <Picker ItemsSource="{Binding Kinds}" SelectedItem="{Binding SelectedAudition, Mode=TwoWay}" />-->
            
            <!--  Send Email Button  -->
            
            <Button
                BackgroundColor="#1ABC9C"
                Command="{Binding SendEmailCommand}"
                CornerRadius="8"
                HeightRequest="45"
                Text="Send Email"
                TextColor="White"
                VerticalOptions="Center" />
        </StackLayout>

    </VerticalStackLayout>

</ContentPage>
