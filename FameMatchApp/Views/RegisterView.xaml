<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FameMatchApp.View.RegisterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:FameMatchApp.ViewModels"
    Title="" 
    x:DataType="viewmodels:RegisterViewModel">
    <StackLayout VerticalOptions="FillAndExpand">

        <Label
            FontSize="50"
            HorizontalOptions="Center"
            Text="Register page"
            TextColor="Purple" />

        <ScrollView
            HorizontalScrollBarVisibility="Always"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">

            <StackLayout>


                <HorizontalStackLayout
                    Margin="20"
                    RadioButtonGroup.GroupName="UserType"
                    RadioButtonGroup.SelectedValue="{Binding UserType}">
                    <Label
                        Grid.Row="11"
                        Margin="15"
                        Text="I am a" />
                    <RadioButton Content="Casted" Value="2" />
                    <RadioButton
                        Content="Castor"
                        IsChecked="True"
                        Value="1" />
                </HorizontalStackLayout>
                <!--  firstName  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="First Name" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowFirstNameError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding FirstNameError}" />
                </Grid>
                <Entry
                    Placeholder="Type your first name"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding FirstName}" />

                <!--  LastName  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Last Name" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowLastNameError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding LastNameError}" />
                </Grid>
                <Entry
                    Placeholder="Type your last name"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding LastName}" />


                <!--  Email  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Email" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowEmailError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding EmailError}" />
                </Grid>
                <Entry
                    Placeholder="Type Email"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Email}" />

                <!--  Password  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Style="{StaticResource labelNameStyle}"
                        Text="Password" />
                    <Label
                        Grid.Column="1"
                        IsVisible="{Binding ShowPasswordError}"
                        Style="{StaticResource labelErrorStyle}"
                        Text="{Binding PasswordError}" />
                </Grid>
                <Entry
                    Grid.Column="0"
                    IsPassword="{Binding IsPassword}"
                    Placeholder="Type Password"
                    Style="{StaticResource entryStyle}"
                    Text="{Binding Password}" />
                <!--  gender  -->
                <StackLayout
                    Margin="20"
                    RadioButtonGroup.GroupName="Gender"
                    RadioButtonGroup.SelectedValue="{Binding Gender}">
                    <Label Text="Gender" />
                    <RadioButton Content="Male" Value="Male" />
                    <RadioButton
                        Content="Female"
                        IsChecked="True"
                        Value="Female" />
                </StackLayout>

                <!--  Photo  -->
                <Frame
                    Margin="10"
                    Padding="5"
                    BorderColor="Black">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            x:Name="Image"
                            HeightRequest="3"
                            Source="{Binding PhotoURL}" />
                        <Label
                            Grid.Row="1"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="Click Here To Upload Photo!"
                            TextColor="Purple"
                            VerticalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding UploadPhotoCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Frame>

                <StackLayout IsVisible="{Binding IsCastorChecked}">
                    <Grid>
                        <!--  NumOfLicense  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Number Of License" />
                    </Grid>
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Type Your Number Of License"
                        Text="{Binding NumOfLicense}" />

                    <!--  Company Name  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Style="{StaticResource labelNameStyle}"
                            Text="Company Name" />
                    </Grid>
                    <Entry Placeholder="Please enter your company name" Text="{Binding CompanyName}" />
                </StackLayout>
                <StackLayout IsVisible="{Binding IsCastedChecked}">
                    <!--  אנטריז נוספים למלוהק  -->
                    <!--  Hight  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Hight" />
                    </Grid>
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Please enter your higth"
                        Text="{Binding Hight}" />

                    <!--  Eyes  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Eyes" />
                    </Grid>
                    <Entry Placeholder="Please enter your Eyes Color" Text="{Binding Eyes}" />

                    <!--  Hair  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Hair Color" />
                    </Grid>
                    <Entry Placeholder="Please enter your hair color" Text="{Binding Hair}" />
                    <!--  Age  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Age" />
                    </Grid>
                    <Entry
                        Keyboard="Numeric"
                        Placeholder="Please enter your Age"
                        Text="{Binding Age}" />
                    <!--  Color  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Skin" />
                    </Grid>
                    <Entry Placeholder="Please enter your skin color" Text="{Binding Color}" />
                    <!--  Body  -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Body Structure" />
                    </Grid>
                    <Entry Placeholder="Please enter your Body Structure" Text="{Binding Body}" />
                </StackLayout>
                <Button Command="{Binding RegisterCommand}" Text="Register" />
            </StackLayout>

        </ScrollView>
    </StackLayout>
</ContentPage>
